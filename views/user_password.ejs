<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>เปลี่ยนรหัสผ่าน</title>
    <link rel="icon" type="image" href="/image/logo_web.png">
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">

    </script>
</head>

<body>
    <header class="mt-5 sticky-top" style="background-color: white;">
        <div class="container">
            <br>
            <div class="row">
                <div class="col-2 ">
                    <script>
                        console.log("Image path:", "/icon/back_icon.svg");
                    </script>
                    <a href="/user_menu"> <img src="/icon/back_icon.svg" alt="Back"></a>
                </div>
                <div class="col-8 text-center">
                    <h2>เปลี่ยนรหัสผ่าน</h2>
                </div>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <div class="card rounded-3">
            <div class="card-body d-flex flex-column align-items-center">
                <form action="/user_password" method="POST">
                    <div class="form-group">
                        <label for="currentPassword">รหัสผ่านปัจจุบัน:</label>
                        <input type="password" class="form-control" id="currentPassword" name="currentPassword"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="newPassword">รหัสผ่านใหม่:</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                    </div>
                    <button type="submit" id="savePasswordBtn" class="btn btn-warning">บันทึก</button>
                    <span id="successMessage"></span>
            </div>
        </div>
    </div>
    </form>

</body>

<!-- end Content -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>

<script>
    const successMessage = document.getElementById('successMessage');
    const savePasswordBtn = document.getElementById('savePasswordBtn');

    // ตรวจสอบว่ามีข้อความสำเร็จส่งมาจาก server หรือไม่
    if ('<%= success %>' !== '') {
        successMessage.textContent = '<%= success %>';
        // เปลี่ยนข้อความบนปุ่ม savePasswordBtn.textContent = 'บันทึกสำเร็จ'; 
    }
</script>

</body>

