<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Home</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/calendar.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f0f0f0;
        }
    </style>


</head>


<body>
    <header class="mt-5 sticky-top ">
        <div class="container">
            <br>
            <div class="row">
                <div class="col-2 ">
                    <script>
                        console.log("Image path:", "/icon/back_icon.svg");
                    </script>
                    <a href="/user_menu"> <img src="/icon/back_icon.svg" alt="Back"></a>
                </div>
                <div class="col-8 text-center">
                    <h2>ตารางงาน</h2>
                </div>
            </div>
        </div>
    </header>
    <!-- Content -->
    <div id="layoutSidenav_content">

        <main>
            <div class="container-fluid px-4">

                <div class="card mb-4">

                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        ตารางงานรายเดือน
                    </div>
                    <div class="card-body">
                        <div id="calendar-container">
                            <div id="calendar-nav">
                                <h2 id="month-year"></h2>
                            </div>
                            <!-- Navigation buttons -->
                            <table id="calendar"></table>

                            <!-- Event popup -->
                            <div id="eventPopup" class="modal">
                                <div class="modal-content">
                                    <span class="close-btn" onclick="closePopup()">&times;</span>
                                    <h2 id="popupDate" style="font-size: 1.5em;"></h2>

                                <label for="nameUser">ชื่อ : </label>
                                <label for="startTime">เวลาเข้า:</label>
                                <input type="time" id="startTime" name="startTime" required>
                                <label for="endTime">เวลาออก:</label>
                                <input type="time" id="endTime" name="endTime" required>

                                <img id="popupImage" src="" alt="Event Image" />
                                <button id="saveButton" class="btn btn-primary" style="float: right;">บันทึก</button>
                                <div style="clear: both;"></div>
                            </div>
                        </div>
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                            crossorigin="anonymous"></script>

                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                            crossorigin="anonymous"></script>

                        <script src="/js/today.js" defer></script>
                        <script src="js/calendar.js"></script>
</body>

</html>