  <title>Dashboard Month</title>
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="/css/calendar.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

  //font
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">

  <style>
    /* Basic calendar styling */
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }

    th {
      background-color: #f0f0f0;
    }

    .calendar {
      width: 100%;
      border-collapse: collapse;
    }

    .calendar th,
    .calendar td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
      vertical-align: top;
    }

    .calendar th {
      background-color: #f0f0f0;
    }

    .calendar .employee-schedule {
      font-size: 12px;
      margin: 2px 0;
    }

    .schedule-box {
      font-size: 0.8em;
      margin-bottom: 2px;
      overflow: hidden;
      text-overflow: ellipsis;
      background-color: #FFFDE7;
      /* สีเหลืองอ่อน */
      border: 1px solid #FFF59D;
      /* เส้นขอบสีเหลืองเข้มกว่าเล็กน้อย */
      border-radius: 3px;
      /* มุมโค้ง */
      padding: 2px 4px;
      /* ระยะห่างภายใน */
      display: block;
      /* ระยะห่างด้านบนและล่าง */
    }

    .status-1 {
        background-color: #aeeeb4;
        border: 1px solid #3e9443;
    }

    .status-2 {
        background-color: #ffb5c0;
        border: 1px solid #e65757;
    }

    .status-default {
        background-color: #FFFDE7;
        border: 1px solid #FFF59D;
    }

  </style>

</head>


<!-- ฺBar ข้างบน -->

<body class="sb-nav-fixed">
  <nav class="sb-topnav navbar navbar-expand navbar-black bg-warning">
    <!-- Sidebar Toggle-->
    <button class="btn btn-link btn-md order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
      <i class="fas fa-bars"></i>
    </button>
    <!-- Navbar Brand-->
    <a class="navbar-brand ps-3 text-dark " href="/dashboard_month">EmpTime</a>
    <!-- ชิดริม-->
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></form>
    <!-- Navbar-->
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
          aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      </li>
    </ul>
  </nav>


  <!-- Side Bar-->
  <!-- ----------------------------------------------------------------------------------------------------- -->
  <div id="layoutSidenav">
    <div id="layoutSidenav_nav">
      <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
          <div class="nav">
            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts"
              aria-expanded="false" aria-controls="collapseLayouts">
              แดชบอร์ด
              <div class="sb-sidenav-collapse-arrow">
                <i class="fas fa-angle-down"></i>
              </div>
            </a>
            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
              <nav class="sb-sidenav-menu-nested nav">
                <a class="nav-link" href="/dashboard_month">
                  ปฏิทินรายเดือน</a>
                <a class="nav-link" href="/dashboard_day">
                  สรุปรายวัน</a>
              </nav>
            </div>

            <a class="nav-link" href="/employee"> พนักงาน </a>
            <a class="nav-link" href="/shift_schedule"> ตารางลงงานพนักงาน </a>
            <a class="nav-link" href="/request"> คำร้องขอ </a>
            <a class="nav-link" href="/receipt"> ใบเสร็จรับเงิน </a>
            <a class="nav-link" href="/store_setting"> ตั้งค่า</a>

          </div>
        </div>
      </nav>
    </div>
    <!-- ----------------------------------------------------------------------------------------------------------- -->

    <!-- Content -->
    <div id="layoutSidenav_content">

      <main>
        <div class="container-fluid px-4">

          <!-- นำทาง link -->
          <h1 class="mt-4">ปฏิทินรายเดือน</h1>
          <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
              <a href="/dashboard_month">แดชบอร์ด</a>
            </li>
            <li class="breadcrumb-item active">ปฏิทินรายเดือน</li>
          </ol>

          <!-- real content ----------------------------------------------------------------------------------------------------------- -->
          <main>
            <div class="d-flex justify-content-end mb-2">
              <div class="me-3">
                <span class="status-box status-1">&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="ms-1">ตรงเวลา</span>
              </div>
              <div>
                <span class="status-box status-2">&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="ms-1">สาย</span>
              </div>
            </div>

            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-table me-1"></i>
                ปฏิทินรายเดือน <%= monthName %>
                  <%= year %>
              </div>
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <a href="/dashboard_month?year=<%= prevYear %>&month=<%= prevMonth %>" class="btn btn-warning">&lt;
                    เดือนก่อนหน้า</a>
                  <h2>
                    <%= monthName %> <%= year %>
                  </h2>
                  <a href="/dashboard_month?year=<%= nextYear %>&month=<%= nextMonth %>"
                    class="btn btn-warning">เดือนถัดไป &gt;</a>
                </div>
                <table class="calendar">
                  <thead>
                    <tr>
                      <th>อาทิตย์</th>
                      <th>จันทร์</th>
                      <th>อังคาร</th>
                      <th>พุธ</th>
                      <th>พฤหัสบดี</th>
                      <th>ศุกร์</th>
                      <th>เสาร์</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% calendar.forEach(week => { %>
                        <tr>
                            <% week.forEach(day => { %>
                                <td class="<%= day.date ? 'day' : 'empty' %>">
                                    <% if (day.date) { %>
                                        <div class="date"><%= day.date %></div>
                                        <% day.schedules.forEach(schedule => { %>
                                            <div class="schedule-box <%= schedule.in_status == 1 ? 'status-1' : (schedule.in_status == 2 ? 'status-2' : 'status-default') %>">
                                                <%= schedule.f_name %>
                                                <%= schedule.in_time.slice(0, 5) %> - <%= schedule.out_time ? schedule.out_time.slice(0, 5) : 'N/A' %>
                                            </div>
                                        <% }) %>
                                    <% } %>
                                </td>
                            <% }) %>
                        </tr>
                    <% }) %>
                </tbody>
                </table>
              </div>
            </div>
        </div>
      </main>
    </div>

    <!-- end Content -->
    <!-- ----------------------------------------------------------------------------------------------------------- -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"></script>
