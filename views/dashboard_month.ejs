    }

    .calendar {
      width: 100%;
      border-collapse: collapse;
    }

    .calendar th,
    .calendar td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }

    .calendar th {
      background-color: #f0f0f0;
    }

    .calendar .employee-schedule {
      font-size: 12px;
      margin: 2px 0;
    }
  </style>

</head>


