    <!-- Content -->
    <div id="layoutSidenav_content">

      <main>
        <div class="container-fluid px-4">

          <!-- นำทาง link -->
          <h1 class="mt-4">ปฏิทินรายเดือน</h1>
          <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
              <a href="/dashboard_month">แดชบอร์ด</a>
            </li>
            <li class="breadcrumb-item active">ปฏิทินรายเดือน</li>
          </ol>

          <!-- real content ----------------------------------------------------------------------------------------------------------- -->
          <main>
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-table me-1"></i>
                ปฏิทินรายเดือน <%= monthName %>
                  <%= year %>
              </div>
              <div class="card-body">
                <table class="calendar">
                  <thead>
                    <tr>
                      <th>อาทิตย์</th>
                      <th>จันทร์</th>
                      <th>อังคาร</th>
                      <th>พุธ</th>
                      <th>พฤหัสบดี</th>
                      <th>ศุกร์</th>
                      <th>เสาร์</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (calendar && calendar.length> 0) { %>
                      <% for(let week of calendar) { %>
                        <tr>
                          <% for(let day of week) { %>
                            <td>
                              <%= day && day.date ? day.date : '' %>
                                <% if (day && day.schedules && day.schedules.length> 0) { %>
                                  <% day.schedules.forEach(schedule=> { %>
                                    <div class="employee-schedule">
                                      <% function formatTime(time) { if (time) { return time.slice(0, 5); } return '' ;
                                        } %>

                                        <%= schedule.f_name %> <%= formatTime(schedule.s_time_in) %> - <%=
                                              formatTime(schedule.s_time_out) %>
                                    </div>
                                    <% }); %>
                                      <% } else if (day && day.date) { %>
                                        <div class="employee-schedule">ไม่มีคนลงงาน</div>
                                        <% } %>
                            </td>
                            <% } %>
                        </tr>
                        <% } %>
                          <% } else { %>
                            <tr>
                              <td colspan="7">ไม่มีข้อมูลปฏิทิน</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
      </main>
    </div>

    <!-- end Content -->
